{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "My API",
    "description": "My API with Swagger"
  },
  "basePath": "/",
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/graphql": {
      "post": {
        "tags": ["graphql"],
        "summary": "Execute a GraphQL query",
        "description": "",
        "parameters": [
          {
            "name": "query",
            "in": "body",
            "description": "GraphQL query",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "query": {
                  "type": "string"
                },
                "variables": {
                  "type": "object"
                },
                "operationName": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "GraphQL response",
            "schema": {
              "type": "object"
            }
          }
        }
      }
    }
  }
}
